            <div class="contact-card">
                <form id="contactForm" action="https://formspree.io/f/xvgedard" method="POST" class="space-y-6">
                    <!-- Name Input -->
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
