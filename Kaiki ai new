                    </div>

                    <!-- Submission Button color updated to Pink -->
                    <button type="submit" id="submitButton" class="w-full px-4 py-3 bg-pink-600 text-white font-semibold rounded-xl btn-primary hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:ring-offset-2">
                        Send Message
                    </button>
                </form>

                <!-- Message Box for Feedback (Text color updated to Pink) -->
                <div id="formStatus" class="mt-4 text-center font-medium min-h-[20px]">
                    <!-- Submission status message will appear here -->
                </div>
